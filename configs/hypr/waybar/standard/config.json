{
	"layer": "top",
	"position": "top",
	"modules-right": ["pulseaudio","custom/wifi_signal", "custom/layout", "clock"],
	"class": "right-modules",
        "modules-center": ["cpu", "memory", "temperature"],	
	"modules-left": ["custom/wofi", "tray"],
	"workspace": {
	       "label": "Workspace"
	},	       
	"clock": {
		"format": "{:%A, %B %d, %Y %I:%M:%S %p}",
		"on-click": "pkill waybar && waybar -c ~/.config/.dotfiles/configs/hypr/waybar/config_change.json -s ~/.config/.dotfiles/configs/hypr/waybar/style_change.css",
		"tooltip": false,
		"interval": 1
        },

	"custom/layout": {
                "format": "{}",
		"exec": "hyprctl devices | awk '/active keymap/ {keymap=$3} /main: yes/ {print keymap}' | sed -E 's/English/US/; s/German/DE/; s/Russian/RU/'",
		"tooltip": false,
		"interval": 1

	},

	"cpu": {
		"format": "{usage}%",
		"tooltip": false,
		"interval": 1
	},

	"memory": {
		"format": "{used}%",
		"tooltip": false,
		"interval": 1
	},

	"temperature": {
		"exec": "sensors | grep 'Package id 0'| awk '{print $4}'",
		"format": "{}",
		"interval": 5,
		"tooltip": false
	},

	"custom/wofi": {
		"format": "",
		"tooltip": false,
		"on-click": "wofi --show drun --x 0 --y 0 --conf ~/.config/.dotfiles/configs/hypr/wofi/config --style ~/.config/.dotfiles/configs/hypr/wofi/style.css"
	},
	"custom/wifi_signal": {
 		"exec": "nmcli -t -f signal dev wifi | head -n 1 | awk '{print $1}' | awk '{print int($1)}'",
  		"interval": 5,
		"format": "{}%",
    		"tooltip": false
	},
	"pulseaudio": {
		"format": "{volume}%",
		"tooltip": false,
    		"format-muted": "",
    		"on-click": "pamixer -t", 
		"on-click-right": "pavucontrol",
   	 	"on-scroll-up": "pamixer --increase 1",
		"on-scroll-down": "pamixer --decrease 1"
 	},
  	"tray": {
		"icon-size": 24
	}
}
